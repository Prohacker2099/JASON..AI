# Server Configuration
PORT=3002
NODE_ENV=development

# Logging
LOG_LEVEL=info

# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# WebSocket Configuration
WS_PATH=/socket.io
CORS_ORIGIN=*

# Authentication (JWT)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1d

# Database (if using)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=commandcore
# DB_USER=
# DB_PASSWORD=

# External Services
# GOOGLE_HOME_API_KEY=
# ALEXA_SKILL_ID=
# HOMEBRIDGE_API_KEY=

# Feature Flags
ENABLE_MQTT=true
ENABLE_HTTP=true
ENABLE_WEBSOCKET=true
