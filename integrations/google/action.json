{
  "actions": {
    "projectId": "jason-smart-home",
    "displayName": "JASON Smart Home",
    "description": "Control your entire smart home through JASON's intelligent platform",
    "version": "1.0.0",
    "smartHomeProviderInfo": {
      "name": "JASON Smart Home",
      "url": "https://jason.ai"
    },
    "fulfillment": {
      "smartHome": {
        "state": {
          "queryUrl": "https://api.jason.ai/google/state",
          "refreshInterval": 30
        }
      }
    },
    "capabilities": {
      "onOff": true,
      "brightness": true,
      "colorSetting": {
        "temperature": true,
        "spectrum": "rgb"
      },
      "thermostatTemperatureControl": true,
      "thermostatMode": ["heat", "cool", "auto", "off"],
      "energyStorage": {
        "charging": true,
        "monitoring": true
      },
      "cameraStream": {
        "protocols": ["hls", "dash"],
        "resolutions": ["HD", "SD"]
      },
      "doorLock": true,
      "scene": true,
      "sensorState": [
        "temperature",
        "humidity",
        "airQuality",
        "motion",
        "occupancy",
        "illuminance"
      ]
    },
    "authentication": {
      "oauth2": {
        "clientId": "${GOOGLE_CLIENT_ID}",
        "clientSecret": "${GOOGLE_CLIENT_SECRET}",
        "tokenUrl": "https://api.jason.ai/oauth2/token",
        "authorizationUrl": "https://api.jason.ai/oauth2/authorize",
        "scopes": ["https://www.googleapis.com/auth/homegraph"]
      }
    },
    "discovery": {
      "asynchronous": true,
      "webhookUrl": "https://api.jason.ai/google/discovery"
    },
    "notifications": {
      "webhookUrl": "https://api.jason.ai/google/notifications"
    }
  }
}
