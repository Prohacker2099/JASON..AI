# JASON Autonomous Agent Environment Variables
# Copy this file to .env and set your values

# Encryption: AES-256-GCM key (hex-encoded, 64 characters for 256-bit)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Optional: TLS certificates for secure WebSocket (wss://)
# HTTPS_CERT=/path/to/cert.pem
# HTTPS_KEY=/path/to/key.pem

# Optional: Database path (default: ./jason.db)
# DB_PATH=./jason.db

# Optional: Log level (debug, info, warn, error)
# LOG_LEVEL=info

# Optional: Port for the HTTP/WebSocket server
# PORT=3002

# Optional: Ghost Hand automation settings
# GHOST_HEADLESS=true
# GHOST_TIMEOUT=30000

# Optional: SCRL learning parameters
# SCRL_ALPHA=0.1
# SCRL_GAMMA=0.9
# SCRL_EPSILON=0.2

# Optional: USPT data directory
# USPT_DATA_DIR=./data/uspt_profiles
