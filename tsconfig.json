{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": ".",
        "sourceMap": true,
        "types": ["node"]
    },
    "include": [
        "server/**/*",
        "shared/**/*",
        "server/src/**/*",
        "server/types.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
