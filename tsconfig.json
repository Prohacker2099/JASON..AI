{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": ".",
        "sourceMap": true,
        "declaration": true,
        "types": ["node"],
        "noEmitOnError": false
    },
    "include": [
        "server/**/*",
        "shared/**/*",
        "server/src/**/*",
        "server/types.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "client",
        "server/node_modules",
        "server/dist",
        "server/services/energy/**/*",
        "server/services/marketplace/**/*",
        "server/services/monitoring/**/*",
        "server/services/ar/**/*",
        "server/services/edge/**/*",
        "server/services/security/**/*"
    ]
}
