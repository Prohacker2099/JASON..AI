{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/server",
    "rootDir": "./server/src",
    "declaration": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true, // Added to allow .ts extensions in imports
    "noEmit": true // Added to resolve error with allowImportingTsExtensions
  },
  "include": ["server/src/**/*.ts"],
  "exclude": ["node_modules", "dist", "client"]
}
